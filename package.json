{
	"name": "sgcomv2",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "index.js",
	"engines": {
		"node": "18.16.0"
	},
	"scripts": {
		"build": "node configs/esbuild.config.js",
		"build:dev": "node configs/esbuild.config.js --mode=dev",
		"clean": "npm run lint:js && npm run lint:css && npm run format",
		"format": "prettier --write './**'",
		"lint:js": "eslint . --ext .js,.svelte --fix",
		"lint:css": "stylelint --fix '**/*.{css,scss,sass}'",
		"migrate:dev": "cd api && npx prisma migrate dev",
		"migrate:prod": "cd api && npx prisma migrate deploy",
		"prepare": "husky install",
		"proxy": "caddy start",
		"seed": "cd api && npx prisma db seed",
		"start": "node .",
		"start:dev": "redis-cli flushall && nodemon .",
		"test:unit": "mocha './tests/unit/*.test.js' --exit",
		"test:integration": "mocha './tests/integration/*.test.js' --exit",
		"test:automation": "npx playwright test --config='./configs/playwright.config.js' --output='./tests/automation/results/' --reporter=list",
		"test": "npm run test:unit && npm run test:integration && npm run test:automation"
	},
	"author": "Steve Giordano",
	"husky": {
		"hooks": {
			"pre-commit": "npm run clean && git add -A ."
		}
	},
	"license": "ISC",
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^5.0.0",
		"@js-temporal/polyfill": "^0.4.4",
		"@prisma/client": "^4.14.1",
		"autoprefixer": "^10.4.14",
		"connect-redis": "^7.1.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"esbuild": "^0.17.17",
		"esbuild-plugin-copy": "^2.1.1",
		"esbuild-sass-plugin": "^2.9.0",
		"esbuild-svelte": "^0.7.3",
		"express": "^4.18.2",
		"express-session": "^1.17.3",
		"helmet": "^7.0.0",
		"husky": "^8.0.3",
		"just-range": "^4.2.0",
		"morgan": "^1.10.0",
		"node-html-parser": "^6.1.5",
		"node-schedule": "^2.1.1",
		"passport": "^0.6.0",
		"passport-google-oauth20": "^2.0.0",
		"postcss": "^8.4.24",
		"postcss-preset-env": "^8.4.1",
		"redis": "^4.6.7",
		"svelte": "^3.59.1",
		"svelte-preprocess": "^5.0.4",
		"svelte-routing": "^1.8.9",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@playwright/test": "^1.34.3",
		"chai": "^4.3.7",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mocha": "^10.2.0",
		"nodemon": "^1.14.9",
		"playwright": "^1.34.3",
		"postcss-scss": "^4.0.6",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prisma": "^4.14.1",
		"sinon": "^15.1.0",
		"stylelint": "^15.9.0",
		"supertest": "^6.3.3",
		"husky": "^8.0.0"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"svelte3"
		],
		"overrides": [
			{
				"files": [
					"*.svelte"
				],
				"processor": "svelte3/svelte3"
			}
		],
		"ignorePatterns": [
			"*.html",
			"*.md",
			"*.css",
			"*.json",
			"*.js.map",
			"node_modules",
			"sandbox/",
			"build/",
			"styles/",
			"images/",
			"migrations/",
			"index.js",
			"schema.prisma",
			"Caddyfile"
		],
		"rules": {
			"no-undef": "off",
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"always"
			],
			"no-unused-vars": 0,
			"quote-props": [
				"warn",
				"always"
			]
		}
	},
	"prettier": {
		"trailingComma": "none",
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"quoteProps": "preserve",
		"bracketSpacing": true,
		"bracketSameLine": true,
		"arrowParens": "always",
		"useTabs": true
	},
	"stylelint": {
		"rules": {
			"block-no-empty": true
		},
		"customSyntax": "postcss-scss",
		"ignoreFiles": [
			"*.md",
			"*.json",
			".npmrc",
			"sandbox/",
			"build/",
			"images/",
			"migrations/",
			"Caddyfile"
		]
	},
	"prisma": {
		"schema": "api/db/schema.prisma",
		"seed": "node db/seed.js"
	}
}
